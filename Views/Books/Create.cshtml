@model LessonMvc.Models.Book;

@{
    ViewData["Title"] = "Books Create";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

</div>

@if (ViewData["Message"] != null)
{

    <div class="alert alert-primary" role="alert">
        @ViewData["Message"]
    </div>

}

@using (@Html.BeginForm())
{
    <div class="form-group">
    @Html.DisplayNameFor(Model => Model.Baslik)
    <div class="col-sm-10">
        @Html.TextBoxFor(Model => Model.Baslik, null, new { @class = "form-control", @id = "inputEmail3" })
    </div>
</div>

    <div class="form-group">
    @Html.DisplayNameFor(Model => Model.Aciklama)
    <div class="col-sm-10">
        @Html.TextAreaFor(Model => Model.Aciklama, new { @class = "form-control", @id = "inputEmail3" })
    </div>
</div>

    <div class="form-group">
    @Html.DisplayNameFor(Model => Model.Tur)
    <div class="col-sm-10">
        @Html.DropDownListFor(Model => Model.Tur, ViewData["tur"] as SelectList, new { @class = "form-control" })
    </div>
</div>

    <div class="form-group">
    @Html.DisplayNameFor(Model => Model.BasimTarih)
    <div class="col-md-10">

            @Html.EditorFor(model => model.BasimTarih, new { htmlAttributes = new { @class = "form-control"} })

    </div>
</div>


    <div class="form-group">
    @Html.DisplayNameFor(Model => Model.Indirimli)
    <div class="col-sm-10">
        @Html.CheckBoxFor(Model => Model.Indirimli, new { @class = "form-comtrol" })
    </div>
</div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Kitap Ekle</button>
    </div>
</div>


}
